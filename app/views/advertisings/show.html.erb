<blockquote>
  <p><%= @advertising.to_s %></p>
  <small>Autor: <%= @advertising.user.email %></small>
</blockquote>

  <div class="well">
    <%= @advertising.description %>
  </div>

<% if user_signed_in? %>
  <%= link_to 'Editar', edit_advertising_path(@advertising), class: 'btn btn-primary' %> 
  <%= link_to 'Apagar', @advertising, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %> 
<% end %>

<%= link_to 'Voltar', advertisings_path, class: 'btn' %>
