<h1>Anúncios Recentes</h1>
<% if user_signed_in? %>
  <blockquote>
    <%= link_to 'Cadastrar Anúncio', new_advertising_path, class: 'btn btn-primary' %>
  </blockquote>
<% end %>

<% @advertisings.each do |advertising| %>
  <blockquote>
    <p><%= link_to advertising.to_s, advertising_path(advertising) %></p>
    <small>Autor: <%= advertising.user.email %></small>
  </blockquote>
<% end %>

